---
import { ArrowUpRight } from 'lucide-react';

const currentYear = new Date().getFullYear();
---

<footer class="bg-black text-white pt-32 pb-12 border-t border-white/10 relative overflow-hidden">
    <!-- Background Glow -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-3xl h-px bg-gradient-to-r from-transparent via-titanium/50 to-transparent"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-1/2 h-24 bg-titanium/5 blur-[100px] pointer-events-none"></div>

    <div class="container mx-auto px-6">
        <!-- Big CTA -->
        <div class="mb-32 text-center">
            <p class="text-sm font-mono text-gray-500 tracking-widest uppercase mb-8">Ready to launch?</p>
            <a href="/contact" class="group inline-block relative">
                <span class="font-display font-bold text-[12vw] leading-none tracking-tighter group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-white group-hover:via-titanium group-hover:to-white transition-all duration-500">
                    LET'S TALK
                </span>
                <div class="h-px w-0 group-hover:w-full bg-titanium transition-all duration-500 ease-out"></div>
                <span class="absolute top-1/2 right-0 translate-x-full -translate-y-1/2 opacity-0 group-hover:opacity-100 group-hover:translate-x-12 transition-all duration-500">
                    <ArrowUpRight className="w-12 h-12 text-titanium" />
                </span>
            </a>
        </div>

        <!-- Footer Grid -->
        <div class="grid grid-cols-1 md:grid-cols-12 gap-12 items-end border-t border-white/10 pt-12">
            
            <!-- Brand -->
            <div class="md:col-span-4">
                <h2 class="font-display font-bold text-2xl mb-4">TITAN DIGITAL</h2>
                <p class="text-gray-500 text-sm leading-relaxed max-w-xs">
                    Forging the future of digital experiences with code and creativity.
                </p>
            </div>

            <!-- Socials -->
            <div class="md:col-span-4 md:text-center">
                <div class="flex flex-col md:flex-row gap-6 md:justify-center">
                    <a href="#" class="text-sm font-mono text-gray-400 hover:text-white transition-colors uppercase tracking-wider">Instagram</a>
                    <a href="#" class="text-sm font-mono text-gray-400 hover:text-white transition-colors uppercase tracking-wider">LinkedIn</a>
                    <a href="#" class="text-sm font-mono text-gray-400 hover:text-white transition-colors uppercase tracking-wider">GitHub</a>
                </div>
            </div>

            <!-- Copyright & Info -->
            <div class="md:col-span-4 md:text-right">
                <div class="flex flex-col gap-2">
                    <span class="text-xs font-mono text-gray-600 uppercase tracking-widest">Taipei, Taiwan</span>
                    <span class="text-xs font-mono text-gray-600 uppercase tracking-widest">Â© {currentYear} Titan Digital. All rights reserved.</span>
                </div>
            </div>
        </div>
    </div>
</footer>
