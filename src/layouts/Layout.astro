---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
// Fonts are loaded via Google Fonts CDN in head


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-TW" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="鈦宇數位 - 為您的品牌注入未來基因" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/titan/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | 鈦宇數位 Titan Digital</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&family=Space+Grotesk:wght@300;400;700&display=swap" rel="stylesheet">
		<ClientRouter />
	</head>
	<body class="bg-void text-starlight antialiased">
		<!-- Ambient Background Glow -->
        <div class="fixed top-0 left-0 w-full h-full overflow-hidden pointer-events-none z-[-1]">
            <div class="absolute top-[-10%] left-[-10%] w-[50vw] h-[50vw] bg-titanium/10 rounded-full blur-[150px] animate-pulse-slow"></div>
            <div class="absolute bottom-[-10%] right-[-10%] w-[40vw] h-[40vw] bg-horizon/10 rounded-full blur-[150px] animate-pulse-slow" style="animation-delay: 2s;"></div>
        </div>
		
		<nav class="fixed top-0 w-full z-50 px-6 py-6 mix-blend-difference text-white">
			<div class="max-w-[1920px] mx-auto flex justify-between items-center">
				<a href="/" class="text-3xl font-display font-bold tracking-widest hover:opacity-80 transition-opacity">
					TITAN
				</a>
				
                <div class="hidden md:flex items-center gap-12">
                    <div class="flex space-x-12 font-sans text-xs font-bold tracking-[0.2em] uppercase">
                        <a href="/services" class="hover:text-titanium transition-colors duration-300 relative group">
                            Services
                            <span class="absolute -bottom-2 left-0 w-0 h-[1px] bg-titanium transition-all duration-300 group-hover:w-full"></span>
                        </a>
                        <a href="/portfolio" class="hover:text-titanium transition-colors duration-300 relative group">
                            Portfolio
                            <span class="absolute -bottom-2 left-0 w-0 h-[1px] bg-titanium transition-all duration-300 group-hover:w-full"></span>
                        </a>
                        <a href="/blog" class="hover:text-titanium transition-colors duration-300 relative group">
                            Insights
                            <span class="absolute -bottom-2 left-0 w-0 h-[1px] bg-titanium transition-all duration-300 group-hover:w-full"></span>
                        </a>
                    </div>
                    <a href="/contact" class="px-8 py-3 border border-white/20 text-xs font-bold tracking-[0.2em] uppercase hover:bg-white hover:text-black transition-all duration-300">
                        Start Project
                    </a>
                </div>
			</div>
		</nav>

		<main>
			<slot />
		</main>

		<footer class="border-t border-white/5 bg-black py-20 mt-32">
			<div class="container mx-auto px-6">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-20">
                    <h2 class="text-[12vw] leading-[0.8] font-display font-bold text-white/10 select-none pointer-events-none">
                        TITAN
                    </h2>
                    <div class="flex flex-col gap-4 mt-8 md:mt-0 text-right">
                        <a href="mailto:hello@titan.digital" class="text-2xl md:text-4xl font-sans font-light hover:text-titanium transition-colors">hello@titan.digital</a>
                        <p class="text-gray-500">Taipei, Taiwan</p>
                    </div>
                </div>
                
				<div class="flex flex-col md:flex-row justify-between items-center pt-8 border-t border-white/10 text-xs text-gray-600 font-mono uppercase tracking-widest">
					<p>&copy; {new Date().getFullYear()} Titan Digital.</p>
                    <div class="flex gap-8 mt-4 md:mt-0">
                        <a href="#" class="hover:text-white transition-colors">Instagram</a>
                        <a href="#" class="hover:text-white transition-colors">LinkedIn</a>
                        <a href="#" class="hover:text-white transition-colors">GitHub</a>
                    </div>
				</div>
			</div>
		</footer>
	</body>
</html>
